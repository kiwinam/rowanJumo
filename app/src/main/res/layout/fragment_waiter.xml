<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="smart.rowan.Fragment.WaiterFragment">

        <ProgressBar
            android:id="@+id/joinProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:visibility="invisible" />

        <ScrollView
            android:id="@+id/joinScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="45dp"
            android:layout_marginTop="0dp"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/linear_join_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/joinTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_marginTop="20dp"
                    android:text="@string/joinRestaurant"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/rowan"
                    android:textSize="40sp" />

                <EditText
                    android:id="@+id/restIDJoin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:hint="@string/restaurant_id" />

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/joinRest"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/holo_red_dark"
            android:text="@string/joinRestaurant"
            android:textColor="@android:color/primary_text_dark"
            android:textStyle="bold" />


    </RelativeLayout>
</layout>